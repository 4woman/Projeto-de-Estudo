@model Zuplae.Aulas.Atv0012.Web.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Produto</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Produto.Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Produto.NomeProduto" class="form-label fw-semibold">Produto</label>
                    <input asp-for="Produto.NomeProduto" class="form-control" placeholder="Digite o nome do produto" />
                    <span asp-validation-for="Produto.NomeProduto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Produto.CodigoProduto" class="form-label fw-semibold">Código</label>
                    <input asp-for="Produto.CodigoProduto" class="form-control" placeholder="Digite o código do produto" />
                    <span asp-validation-for="Produto.CodigoProduto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Produto.Preco" class="form-label fw-semibold">Preço</label>
                    <input asp-for="Produto.Preco" type="number" step="0.01" class="form-control" placeholder="Digite o preço" />
                    <span asp-validation-for="Produto.Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Fornecedor</label>
                    <select asp-for="Produto.Fornecedor.Id" asp-items="Model.Fornecedores" class="form-select">
                        <option value="">-- selecione um fornecedor --</option>
                    </select>
                    <span asp-validation-for="Produto.Fornecedor.Id" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
