@model IEnumerable<Zuplae.Aulas.Atv0012.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-box-seam"></i> Lista de Produtos</h3>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Novo Cadastro
            </a>
        </div>
        <div class="card-body p-4">

            <div class="mb-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Buscar produto..." />
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th @Html.DisplayNameFor(model => model.NomeProduto)>Produto</th>
                            <th @Html.DisplayNameFor(model => model.CodigoProduto)>Código</th>
                            <th @Html.DisplayNameFor(model => model.Preco)>Preço</th>
                            <th>@Html.DisplayNameFor(model => model.Fornecedor)</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="productTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NomeProduto)</td>
                                <td>@Html.DisplayFor(modelItem => item.CodigoProduto)</td>
                                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial) - @Html.DisplayFor(modelItem => item.Fornecedor.CNPJ)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Tem certeza que deseja excluir este item?');">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Busca em tempo real
        const searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('keyup', function () {
            const filter = searchInput.value.toLowerCase();
            const rows = document.querySelectorAll('#productTable tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });
    </script>
}
