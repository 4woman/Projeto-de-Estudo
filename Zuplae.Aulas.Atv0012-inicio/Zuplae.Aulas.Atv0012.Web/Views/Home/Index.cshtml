@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-banner position-relative text-white d-flex align-items-center">

    <!-- Efeito de overlay para melhor contraste -->
    <div class="overlay"></div>

    <div class="container position-relative z-index-1">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8 col-md-10">
                <h1 class="display-3 fw-bold mb-4 text-black animate__animated animate__fadeInDown">
                    <span class="text-primary">FrotaZ5</span> - Seu Transporte com Excelência
                </h1>

                <p class="lead fs-4 mb-5 text-black animate__animated animate__fadeIn animate__delay-1s">
                    Soluções logísticas completas, seguras e confiáveis para seu negócio
                </p>

                <div class="d-flex justify-content-center gap-3 animate__animated animate__fadeInUp animate__delay-1s">

                    <li class="nav-item dropdown ">
                        <a class="btn btn-outline-primary dropdown-toggle px-5 py-3 fs-5" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-building me-1"></i>Cadastros
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Endereco" asp-action="Index">
                                    <i class="fas fa-map-marker-alt me-1"></i>Endereços
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Fornecedor" asp-action="Index">
                                    <i class="fas fa-truck me-1"></i>Fornecedores
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Produto" asp-action="Index">
                                    <i class="fas fa-box-open me-1"></i>Produtos
                                </a>
                            </li>
                        </ul>
                    </li>
                </div>
            </div>
        </div>
    </div>

</section>

<!-- Adicionar no cabeçalho -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">







