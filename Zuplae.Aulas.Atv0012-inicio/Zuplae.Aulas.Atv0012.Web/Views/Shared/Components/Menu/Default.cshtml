@using Zuplae.Aulas.Atv0012.UserAccess
@model Zuplae.Aulas.Atv0012.UserAccess.Usuario

<!-- Logo com tamanho mais adequado -->
<a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
    <img src="/images/LogoNET.png" alt="Logo" width="200" class="me-2" />

</a>


<!-- Botão responsivo melhor identificado -->
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
aria-controls="navbarContent" aria-expanded="false" aria-label="Alternar navegação">
    <span class="navbar-toggler-icon"></span>
    <span class="visually-hidden">Menu</span>
</button>

<!-- Itens do menu com melhor organização e feedback visual -->
<div class="collapse navbar-collapse justify-content-between" id="navbarContent">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-1"></i>Olá, @Model.Nome
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-building me-1"></i>Cadastros
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Endereco" asp-action="Index">
                        <i class="fas fa-map-marker-alt me-1"></i>Endereços
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Fornecedor" asp-action="Index">
                        <i class="fas fa-truck me-1"></i>Fornecedores
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Produto" asp-action="Index">
                        <i class="fas fa-box-open me-1"></i>Produtos
                    </a>
                </li>
            </ul>
        </li>

    </ul>

    <!-- Área de usuário/login à direita -->
    <ul class="navbar-nav">
        @if (Model.Perfil == PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Index">
                    <i class="fas fa-user-circle me-1"></i>Minha Conta
                </a>
            </li>
        }
       
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Login" asp-action="Sair">
                <i class="fas fa-sign-out-alt me-1"></i>Sair
            </a>
        </li>
    </ul>
</div>
