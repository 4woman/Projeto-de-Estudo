@using Zuplae.Aulas.Atv0012.Models
@model Zuplae.Aulas.Atv0012.Models.Usuario

<!-- Logo com tamanho mais adequado -->
<a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
    <img src="~/images/Logo da Frota .NET.png" alt="Logo" width="200" class="me-2" />

</a>


<!-- Botão responsivo melhor identificado -->
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
aria-controls="navbarContent" aria-expanded="false" aria-label="Alternar navegação">
    <span class="navbar-toggler-icon"></span>
    <span class="visually-hidden">Menu</span>
</button>

<!-- Itens do menu com melhor organização e feedback visual -->
<div class="collapse navbar-collapse justify-content-between" id="navbarContent">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-1"></i>Olá, @Model.Nome
            </a>
        </li>
       

    </ul>

    <!-- Área de usuário/login à direita -->
    <ul class="navbar-nav">
        @if (Model.Perfil == PerfilEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Index">
                    <i class="fas fa-user-circle me-1"></i>Minha Conta
                </a>
            </li>
        }
       
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Login" asp-action="Sair">
                <i class="fas fa-sign-out-alt me-1"></i>Sair
            </a>
        </li>
    </ul>
</div>
